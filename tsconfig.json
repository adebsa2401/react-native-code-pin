{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
